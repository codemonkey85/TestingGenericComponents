@page "/fetchdata"

<PageTitle>Todos</PageTitle>

<h1>Todos</h1>

@if (todos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <GenericTable Items="todos" Context="todo">
        <TableHeader>
            <th>ID</th>
            <th>User ID</th>
            <th>Title</th>
            <th>Completed</th>
        </TableHeader>
        <RowTemplate>
            <td>@todo.Id.ToString()</td>
            <td>@todo.UserId.ToString()</td>
            <td>@todo.Title</td>
            <td>@todo.Completed.ToString()</td>
        </RowTemplate>
    </GenericTable>
}
